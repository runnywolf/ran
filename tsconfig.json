{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
    "strict": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "types": [ "node", "vite/client" ],
		"baseUrl": ".",
		"paths": { // import ts 的路徑別名
			"@/*": [ "./src/*" ],
			"@lib/*": [ "./src/libs/*" ]
		}
  },
  "include": [ "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue" ] // ts 編譯檔案
}
